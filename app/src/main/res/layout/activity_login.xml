<?xml version="1.0" encoding="utf-8"?>
<!-- Programa de Darío -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_presentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        android:gravity="center"
        android:text="@string/texto_presentacion"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_editexts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_presentacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:hint="usuario"
            android:textColorHint="#999"
            android:maxLength="12"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:hint="contraseña"
            android:textColorHint="#999"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_editexts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_login"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/button_shape"
            android:layout_margin="20dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_registrarse"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/button_shape"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>