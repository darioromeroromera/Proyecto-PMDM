<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.proyectopmdm.fragments.HomeFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_homeFragment_to_recyclerFragment"
            app:destination="@id/recyclerFragment" />
    </fragment>

    <fragment
        android:id="@+id/recyclerFragment"
        android:name="com.example.proyectopmdm.fragments.RecyclerFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_recycler" >
        <action
            android:id="@+id/action_recyclerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_recyclerFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.proyectopmdm.fragments.DetailFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_detail"
        >
        <action
            android:id="@+id/action_detailsFragment_to_recyclerFragment"
            app:destination="@id/recyclerFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="nombre"
            app:argType="string" />
        <argument
            android:name="nombreCompleto"
            app:argType="string" />
        <argument
            android:name="telefono"
            app:argType="string" />
        <argument
            android:name="imagen"
            app:argType="string" />
        <argument
            android:name="detalles"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.proyectopmdm.fragments.SettingsFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_settings" >
    </fragment>

    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.example.proyectopmdm.fragments.AboutUsFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_about_us"
        ></fragment>

    <fragment
        android:id="@+id/securityFragment"
        android:name="com.example.proyectopmdm.fragments.SecurityFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_security"
        ></fragment>

    <fragment
        android:id="@+id/anchoredContactsFragment"
        android:name="com.example.proyectopmdm.fragments.AnchoredContactsFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_anchored_contacts"
        ></fragment>

    <fragment
        android:id="@+id/blockedContactsFragment"
        android:name="com.example.proyectopmdm.fragments.BlockedContactsFragment"
        android:label="@string/empty_label"
        tools:layout="@layout/fragment_blocked_contacts"
        ></fragment>
</navigation>